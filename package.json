{
  "name": "razorpay-kit",
  "version": "0.0.1",
  "description": "A lightweight Razorpay helper toolkit with order creation, signature verification, and checkout utilities.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "dev": "tsup src/index.ts --watch --dts --format cjs,esm",
    "test": "echo \"No tests yet\""
  },
  "keywords": [
    "razorpay",
    "node",
    "nextjs",
    "sdk",
    "payment",
    "gateway",
    "api",
    "checkout"
  ],
  "author": "Yash Babani",
  "license": "MIT",
  "dependencies": {
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
